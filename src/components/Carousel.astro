---
import Carousel from '@/components/Carousel.jsx'

export interface Props {
  children: any
}
---

<Carousel client:only>
  <slot />
</Carousel>

<style lang="scss">
  @import '../assets/styles/_index.scss';
  :global(.carousel) {
    :global(img) {
      width: 100%;
      height: auto;
    }
    :global(figcaption) {
      margin: 0.8em 0 0;
      max-width: 42ch;
    }
    :global(.flickity-viewport) {
      transition: height 255ms;
    }
    :global(.flickity-page-dots) {
      justify-content: flex-start;
      bottom: -2rem;
      :global(.flickity-page-dot) {
        width: 0.6rem;
        height: 0.6rem;
        margin: 0.2rem;
        &:first-child {
          margin-left: 0;
        }
      }
    }
  }
</style>
